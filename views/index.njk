{% extends 'layout.njk' %}

{% block links %}
    <a href="/">Sobre</a>
    <a href="/contents">Conteúdos</a>
{% endblock %}

{% block content %}

    <section class="about" id="about">
        <div class="description">
            <img src="https://avatars0.githubusercontent.com/u/28929274?s=200&v=4" alt="Logo da Rocketseat">
            <h1>Rocketseat</h1>
            <p>Sua plataforma de evolução em tecnologia.</p>
        </div>

        <div class="techs">
            <div class="images-techs">
                <img src="/images/node-js.svg" alt="Node.js">
                <img src="/images/reactjs.svg" alt="ReactJS">
                <img src="/images/react-native.svg" alt="React Native">
            </div>
            <h1>Principais tecnologias utilizadas na nossa plataforma:</h1>
            <ul>
                <li>Node.js</li>
                <li>ReactJS</li>
                <li>React Native</li>
            </ul>
        </div>
    </section>
{% endblock %}